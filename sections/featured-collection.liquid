<section class="container mx-auto py-8 gap-4">
  <h1 class="text-2xl font-semibold mb-4">{{ section.settings.title }}</h1>
  <div class="grid sm:grid-cols-1 md:grid-cols-4 gap-4">
    {% for product in section.settings.featured_collection.products limit: section.settings.number_products_to_show %}
      {% render 'product-cart', product: product %}
    {% else %}
      {% for item in (1..4) %}
        {% render 'product-placeholder' %}
      {% endfor %}
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Featured Collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Featured Collection",
        "label": "Title"
      },
      {
        "type": "collection",
        "id": "featured_collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "number_products_to_show",
        "min": 4,
        "max": 8,
        "default": 4,
        "label": "Number of products to show"
      }
    ],
    "presets": [
      {
        "name": "Featured Colletion"
      }
    ]
  }
{% endschema %}