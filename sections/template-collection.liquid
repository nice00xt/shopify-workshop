{% paginate collection.products by 12 %}
  <section class="container mx-auto py-8 gap-4">
    <h1 class="text-2xl font-semibold mb-4">{{ collection.title }}</h1>
    <div class="grid grid-cols-4 gap-4">
      {% for product in collection.products %}
        <a href="{{ product.url }}" class="card card-compact w-96 bg-base-100 shadow-xl w-full bg-slate-700">
          <figure>
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.featured_image.alt }}" class="w-full h-[214px] object-cover" />
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'w-full h-[214px] object-cover'}}    
            {% endif %}
          </figure>
          <div class="card-body">
            <p>{{ product.vendor }}</p>
            <h2 class="card-title">{{ product.title }}</h2>
            <p class="text-gray-200 font-semibold">{{ product.price | money }}</p>
          </div>
        </a>
        {% else %}
          <span>There no products inside this collection</span>
      {% endfor %}
    </div>
  </section>
  {% render 'pagination', pagination: paginate %}
{% endpaginate %}
